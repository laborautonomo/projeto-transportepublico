<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              >

    <ImageButton
            android:layout_width="194dp"
            android:layout_height="fill_parent"
            android:id="@+navigation_menu/journey"
            android:background="@drawable/viagem"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+navigation_menu/traffic"
            android:background="@drawable/transito"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+navigation_menu/stocking"
            android:background="@drawable/lotacao"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+navigation_menu/alert"
            android:background="@drawable/alertas"/>

</LinearLayout>
