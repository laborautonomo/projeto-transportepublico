<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicialActivity"
    tools:ignore="MergeRootFrame" >

    <TableRow
        android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:weightSum="3"
                android:layout_weight="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+tela_inicio/pesquisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_pesquisa" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Pesquisa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+tela_inicio/favoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_favorito" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Favoritos" />
        </LinearLayout>
    </TableRow>
    
     <TableRow
       android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:weightSum="3"
                android:layout_weight="1"  >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+tela_inicio/ponto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_ponto" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Pontos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
		<ImageButton
                android:id="@+tela_inicio/noticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_ponto" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Noticias" />
           
        </LinearLayout>
    </TableRow>


</TableLayout>

